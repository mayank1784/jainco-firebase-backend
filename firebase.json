{
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    }
  ],
  "hosting": {
    "public": "y",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "auth": {
      "host": "192.168.1.6",
      "port": 9099
    },
    "functions": {
      "host": "192.168.1.6",
      "port": 5001
    },
    "firestore": {
      "host": "192.168.1.6",
      "port": 8080
    },
    "hosting": {
      "host": "192.168.1.6",
      "port": 5002
    },
    "storage": {
      "host": "192.168.1.6",
      "port": 9199
    },
    "ui": {
      "enabled": true,
      "host": "192.168.1.6"
    },
    "singleProjectMode": true
  },
  "extensions": {}
}
