rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
     // Allow read access to all files in the /images folder for everyone
    match /images/{allImages=**} {
      allow read: if true; // Public read access
      
      // Allow write access only for users with custom claim 'admin' set to true
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
     // Allow read and write access only for admin in the /profile_images folder
    match /profile_images/{allProfileImages=**} {
      allow read, write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}
